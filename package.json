{
  "name": "bdd-lazy-var-next",
  "version": "0.0.1",
  "author": "Sujeet Kc",
  "description": "Provides \"ui\" for testing frameworks such as mocha/jasmine/jest/vitest/bun which allows to define lazy variables and subjects",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "git@github.com:kcsujeet/bdd-lazy-var-next.git"
  },
  "keywords": [
    "mocha.js",
    "jasmine",
    "jest",
    "vitest",
    "bun",
    "bun:test",
    "bdd",
    "lazy",
    "variable",
    "syntax",
    "dsl",
    "subject",
    "rspec"
  ],
  "bugs": {
    "url": "https://github.com/kcsujeet/bdd-lazy-var-next/issues"
  },
  "main": "./dist/index.js",
  "peerDependencies": {
    "jasmine": ">=2",
    "jasmine-core": "^4.6.1",
    "jest": ">=20",
    "mocha": ">=2.3",
    "vitest": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "jasmine": {
      "optional": true
    },
    "jasmine-core": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "mocha": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-object-assign": "^7.27.1",
    "@babel/preset-env": "^7.28.5",
    "@biomejs/biome": "^2.3.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "^1.3.3",
    "@types/chai": "4",
    "@types/chai-spies": "^1.0.6",
    "@types/jasmine": "^5.1.13",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "assertion-error": "1.1.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "chai": "^4.5.0",
    "chai-spies": "^1.1.0",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "jasmine": "^4.6.0",
    "jest": "^30.2.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-esbuild": "^2.3.0",
    "karma-jasmine": "^5.1.0",
    "karma-mocha": "^2.0.1",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "puppeteer": "^24.31.0",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "mocha": "NODE_PATH=. mocha -r ts-node/register -r src/test/config.ts src/test/*_examples.ts src/test/shared_behavior.spec.ts",
    "test.mocha-ui": "bun run mocha -- -u dist/index.js src/features/mocha/test/bdd.test.ts",
    "test.mocha-global": "bun run mocha -- -u dist/global.js src/features/mocha/test/global.test.ts",
    "test.mocha-getter": "bun run mocha -- -u dist/getter.js src/features/mocha/test/getter.test.ts",
    "test.mocha": "bun run test.mocha-ui && bun run test.mocha-global && bun run test.mocha-getter",
    "test.browser-mocha-ui": "karma start -u bdd-lazy-var-next --src dist/index.js --specs src/features/mocha/test/bdd.test.ts karma.config.js",
    "test.browser-mocha-global": "karma start -u bdd-lazy-var-next/global --src dist/global.js --specs src/features/mocha/test/global.test.ts,src/features/mocha/test/bdd.test.ts karma.config.js",
    "test.browser-mocha-getter": "karma start -u bdd-lazy-var-next/getter --src dist/getter.js --specs src/features/mocha/test/getter.test.ts,src/features/mocha/test/bdd.test.ts karma.config.js",
    "test.mocha-in-browser": "bun run test.browser-mocha-ui && bun run test.browser-mocha-global && bun run test.browser-mocha-getter",
    "test.jasmine-ui": "bun run src/features/jasmine/runner.ts dist/index.js src/features/jasmine/test/bdd.test.ts",
    "test.jasmine-global": "bun run src/features/jasmine/runner.ts dist/global.js src/features/jasmine/test/global.test.ts",
    "test.jasmine-getter": "bun run src/features/jasmine/runner.ts dist/getter.js src/features/jasmine/test/getter.test.ts",
    "test.jasmine": "bun run test.jasmine-ui && bun run test.jasmine-global && bun run test.jasmine-getter",
    "test.browser-jasmine-ui": "karma start -f jasmine --src dist/index.js --specs src/features/jasmine/test/bdd.test.ts karma.config.js",
    "test.browser-jasmine-global": "karma start -f jasmine --src dist/global.js --specs src/features/jasmine/test/global.test.ts,src/features/jasmine/test/bdd.test.ts karma.config.js",
    "test.browser-jasmine-getter": "karma start -f jasmine --src dist/getter.js --specs src/features/jasmine/test/getter.test.ts,src/features/jasmine/test/bdd.test.ts karma.config.js",
    "test.jasmine-in-browser": "bun run test.browser-jasmine-ui && bun run test.browser-jasmine-global && bun run test.browser-jasmine-getter",
    "test.jest-ui": "SRC_FILE=dist/index.js jest --findRelatedTests src/features/jest/test/bdd.test.ts",
    "test.jest-global": "SRC_FILE=dist/global.js jest --findRelatedTests src/features/jest/test/global.test.ts",
    "test.jest-getter": "SRC_FILE=dist/getter.js jest --findRelatedTests src/features/jest/test/getter.test.ts",
    "test.jest": "bun run test.jest-ui && bun run test.jest-global && bun run test.jest-getter",
    "test.vitest-ui": "SRC_FILE=dist/index.js vitest run src/features/vitest/test/bdd.test.ts",
    "test.vitest-global": "SRC_FILE=dist/global.js vitest run src/features/vitest/test/global.test.ts",
    "test.vitest-getter": "SRC_FILE=dist/getter.js vitest run src/features/vitest/test/getter.test.ts",
    "test.vitest": "bun run test.vitest-ui && bun run test.vitest-global && bun run test.vitest-getter",
    "test.bun-ui": "bun test --preload ./src/features/bun/preloads/ui.ts src/features/bun/test/bdd.test.ts",
    "test.bun-global": "bun test --preload ./src/features/bun/preloads/global.ts src/features/bun/test/global.test.ts",
    "test.bun-getter": "bun test --preload ./src/features/bun/preloads/getter.ts src/features/bun/test/getter.test.ts",
    "test.bun": "bun run test.bun-ui && bun run test.bun-global && bun run test.bun-getter",
    "test.native.bun": "bun test src/features/bun/test/native_usage.test.ts",
    "test.native.jest": "bun run jest --no-cache --config='{\"preset\":\"ts-jest\",\"testEnvironment\":\"node\",\"setupFilesAfterEnv\":[\"./src/features/jest/empty_setup.ts\"]}' src/features/jest/test/native_usage.test.ts",
    "test.native.vitest": "bun run vitest run -c vitest.native.config.ts",
    "test.native.jasmine": "bun run src/features/jasmine/native_runner.ts dist/global.js src/features/jasmine/test/native_usage.test.ts",
    "test.native.mocha": "bunx mocha -r ts-node/register -u dist/global.js src/features/mocha/test/native_usage.test.ts",
    "test.native": "bun run test.native.bun && bun run test.native.jest && bun run test.native.vitest && bun run test.native.jasmine && bun run test.native.mocha",
    "test": "bun run test.mocha && bun run test.mocha-in-browser && bun run test.jasmine && bun run test.jasmine-in-browser && bun run test.jest",
    "prebuild": "bun run lint",
    "build": "bun run build.ts",
    "lint": "biome check --write src",
    "lint:check": "biome check src",
    "type-check": "tsc --noEmit",
    "ci": "bun run lint:check && bun run type-check && bun run build",
    "ci:test": "bun run ci && bun run test.mocha && bun run test.jasmine && bun run test.vitest && bun run test.bun && bun run test.native",
    "prepare": "husky",
    "prerelease": "NODE_ENV=production bun run build",
    "release": "semantic-release"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/features/jest/test/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "./src/features/jest/setup.ts"
    ]
  },
  "files": [
    "dist/getter.js",
    "dist/getter.js.map",
    "getter.d.ts",
    "dist/global.js",
    "dist/global.js.map",
    "global.d.ts",
    "dist/index.js",
    "dist/index.js.map",
    "index.d.ts",
    "interface.d.ts"
  ],
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "chore",
              "scope": "deps",
              "release": "patch"
            },
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
