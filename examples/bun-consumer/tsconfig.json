{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["bun"],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["test/**/*.ts", "test/**/*.tsx", "test/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "setup.ts"]
}
